<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/tview_1"
        android:layout_width="230dp"
        android:layout_height="75dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="222dp"
        android:layout_marginEnd="100dp"
        android:hint="@string/tv_1"
        android:text="MEMORY GAME"
        android:textAlignment="center"
        android:textColor="#491F95"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/tv_1" />

    <Button
        android:id="@+id/bt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="168dp"
        android:hint=" "
        android:onClick="Start"
        android:text="@string/bt_1"
        android:textColor="#2C115C"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tview_1" />

</androidx.constraintlayout.widget.ConstraintLayout>